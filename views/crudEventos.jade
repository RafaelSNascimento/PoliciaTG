				.col-sm-4.form-group
					label(for="cep" style="float:left") CEP
					input#cep(type='text', maxlength='8', placeholder='Ex: 13483-087', onkeypress='return event.charCode >= 48 && event.charCode <= 57' ,class="form-control")


			.row
				.col-sm-2.form-group
					label(for="uf" style="float:left") UF
					input#uf(type='text',class="form-control",maxlength="3")
				.col-sm-3.form-group
					label(for="cidade" style="float:left") Cidade
					input#cidade(type='text',class="form-control",maxlength="230")
				.col-sm-3.form-group
					label(for="logradouro" style="float:left") Endereço
					input#logradouro(type='text',class="form-control",maxlength="230")
				.col-sm-2.form-group
					label(for="bairro" style="float:left") Bairro
					input#bairro(type='text',class="form-control",maxlength="230")
				.col-sm-2.form-group
					label(for="numero" style="float:left") Numero
					input#numero(type='number',class="form-control",maxlength="5")
			hr
			h3(style="color:black;") Trajes
			.row
				.col-sm-4.form-group
					label(for="pm" style="float:left") PM
					input#pm(type='text',class="form-control",maxlength="230")
				.col-sm-4.form-group
					label(for="civisVeteranos" style="float:left") Civis e Veteranos
					input#civisVeteranos(type='text',class="form-control",maxlength="230")
				.col-sm-4.form-group
					label(for="ffaa" style="float:left") FFAA
					input#ffaa(type='text',class="form-control",maxlength="230")


			hr
			p
				button(type="button" id="cadastrarE" class="btn btn-default btn-lg") Cadastrar Evento 
					span(class="glyphicon glyphicon-ok-circle" aria-hidden="true")
		hr

