//Cadastrar Evento
div.container-fluid.text-center#ca
	div.row-fluid
		form(id="formCadastrarEventos", method='POST', style="width: auto;")
			div(class="form-group")
				label(for="nome" style="float:left") Nome do Evento
				input(type='text',class="form-control", id = "nome", style="width: 100%;" ,placeholder="Nome",maxlength="230")
			.row
				.col-sm-4.form-group
					label(for="data" style="float:left") Data do Evento
